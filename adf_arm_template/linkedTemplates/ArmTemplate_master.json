{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "factoryName": {
            "type": "string",
            "metadata": "Data Factory name",
            "defaultValue": "cloud-dev-adf02"
        },
        "ls_sqldb_password": {
            "type": "secureString",
            "metadata": "Secure string for 'password' of 'ls_sqldb'"
        },
        "ls_adl_accountKey": {
            "type": "secureString",
            "metadata": "Secure string for 'accountKey' of 'ls_adl'"
        },
        "ls_blob_connectionString": {
            "type": "secureString",
            "metadata": "Secure string for 'connectionString' of 'ls_blob'"
        },
        "ls_sqldb_properties_typeProperties_server": {
            "type": "string",
            "defaultValue": "cloudsqlserver02.database.windows.net"
        },
        "ls_sqldb_properties_typeProperties_database": {
            "type": "string",
            "defaultValue": "cloudsqldb02"
        },
        "ls_sqldb_properties_typeProperties_userName": {
            "type": "string",
            "defaultValue": "sebastian"
        },
        "ls_adl_properties_typeProperties_url": {
            "type": "string",
            "defaultValue": "https://cloudadl02.dfs.core.windows.net/"
        },
        "tr_event_properties_typeProperties_scope": {
            "type": "string",
            "defaultValue": "/subscriptions/fc48e5ac-7507-4f71-8257-3a3665196b7b/resourceGroups/cloud-dev-dependancy/providers/Microsoft.Storage/storageAccounts/cloudblob02"
        },
        "containerUri": {
            "type": "string",
            "metadata": "URI to storage account containing linked ARM templates"
        },
        "containerSasToken": {
            "type": "string",
            "metadata": "Sas token to storage account containing linked ARM templates"
        }
    },
    "variables": {
        "factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
    },
    "resources": [
        {
            "name": "cloud-dev-adf02_ArmTemplate_0",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2024-03-01",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "factoryName": {
                        "value": "[parameters('factoryName')]"
                    },
                    "ls_sqldb_password": {
                        "value": "[parameters('ls_sqldb_password')]"
                    },
                    "ls_adl_accountKey": {
                        "value": "[parameters('ls_adl_accountKey')]"
                    },
                    "ls_blob_connectionString": {
                        "value": "[parameters('ls_blob_connectionString')]"
                    },
                    "ls_sqldb_properties_typeProperties_server": {
                        "value": "[parameters('ls_sqldb_properties_typeProperties_server')]"
                    },
                    "ls_sqldb_properties_typeProperties_database": {
                        "value": "[parameters('ls_sqldb_properties_typeProperties_database')]"
                    },
                    "ls_sqldb_properties_typeProperties_userName": {
                        "value": "[parameters('ls_sqldb_properties_typeProperties_userName')]"
                    },
                    "ls_adl_properties_typeProperties_url": {
                        "value": "[parameters('ls_adl_properties_typeProperties_url')]"
                    },
                    "tr_event_properties_typeProperties_scope": {
                        "value": "[parameters('tr_event_properties_typeProperties_scope')]"
                    }
                }
            },
            "dependsOn": []
        }
    ]
}